<div class="mx-3">
    <%= render partial: "modal" %><br>
</div>
<h1 class="mx-3"> Your recipes: </h1><br>
<div class="container">
  <div class="row">
  <% if @recipes.empty? %>
      <h3>You have no recipes yet!</h3>
      <p>Try adding new recipes using the button above</p>
    <% else %>
      <% @recipes.each do |recipe| %>
         <%= render "recipe-card", recipe: recipe %>
        <% end %>
    <% end %>
  </div>
</div>