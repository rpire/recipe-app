<button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#foodModal">
  Add Food
</button>

<!-- Modal -->
<div class="modal fade" id="foodModal" tabindex="-1" aria-labelledby="recipeModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="foodModalLabel">Add new food</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with scope: :food do |form| %>
            <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <%= form.text_field :name, required: true, autofocus: true, class: "form-control", id: "name"%>
          </div>
          <div class="mb-3">
                <label for="measurement-unit" class="form-label">Measurement unit</label>
            <%= form.text_field :measurement_unit, required: true, class: "form-control", id: "measurement-unit" %>
          </div>
            <div class="mb-3">
            <label for="price" class="form-label">Price (USD)</label>
            <%= form.text_field :price, required: true, class: "form-control", id: "price"%>
          </div>
          <br>      
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <%= form.submit 'Save food', class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<br>